<h1>Editing Product</h1>

<%= form_for(@product) do |f| %>
  <% if @product.pic1? %>
    <%= image_tag @product.pic1.url %>
  <% else %>
    <%= image_tag("/images/icon/no-image.png") %>
  <% end %>
  <%= f.file_field :pic1 %>

  <% if @product.pic2? %>
    <%= image_tag @product.pic2.url %>
  <% else %>
    <%= image_tag("/images/icon/no-image.png") %>
  <% end %>
  <%= f.file_field :pic2 %>

  <% if @product.pic3? %>
    <%= image_tag @product.pic3.url %>
  <% else %>
    <%= image_tag("/images/icon/no-image.png") %>
  <% end %>
  <%= f.file_field :pic3 %>

  <%= f.submit 'プロフィール編集を完了する', class: 'btn btn-primary' %>
<% end %>


<%= link_to 'Show', @product %> |
<%= link_to 'Back', products_path %>
